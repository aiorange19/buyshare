<div class="main users-new">
    <div class="container">
        <div class="form-heading"><h2>ログイン</h2></div>
            <div class="form users-form">
                <div class="error-message">
                    <% if @error_message %>
                        <%= @error_message %>
                    <% end %>
                </div>
                <div class="form-body">

                    <%= form_tag("/login") do %>
                        <div class="form">
                            <p>メールアドレス</p>
                            <input name='email' value="<%= @email %>">
                        </div>

                        <div class="form">    
                            <p>パスワード</p>
                            <input type='password' name="password" value="<%= @password %>">
                        </div>

                        <div class="form-botton">    
                            <input type="submit" value="ログイン">
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>
