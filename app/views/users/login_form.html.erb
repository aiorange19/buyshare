<div>
  <div>ログイン</div>
  <% if @error_message %>
    <%= @error_message %>
  <% end %>
 <%= form_tag("/login") do %>
  <div class="form">
    <p>メールアドレス</p>
      <input name='email' value="<%= @email %>">
      
    <p>パスワード</p>
      <input type='password' name="password" value="<%= @password %>">
      
      <input type="submit" value="ログイン">
  </div>
<% end %>
</div>

