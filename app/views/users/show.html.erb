<div class="main">    
    <div class="container">
        <div class='user_show'>
        <div class='user_image'>
            <img src="<%= "/user_images/#{@user.image_name}" %>" width='200' height='150'>
        </div>
        <div class='user_info'>
            <h2><%= @user.name %></h2>
            <p><%= @user.email %></p>
            <% if @user.id == @current_user.id %>
            <p><%= link_to('編集', edit_user_path(@user.id)) %></p>
            <% end %>
        </div>

            <ul class="user-tabs">
            <li class="active"><%= link_to("投稿", "/users/#{@user.id}") %></li>
            <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
            <li><%= link_to("買いたい！", "/users/#{@user.id}/wants") %></li>
            </ul>

            <% @user.items.each do |item| %>
            <div class="items-index-content">
                <div class="item-left">
                <img src="<%= "/user_images/#{item.user.image_name}" %>">
                </div>
                <div class="item-right">
                <div class="item-user-name">
                    <%= link_to(item.user.name, "/users/#{item.user.id}") %>
                </div>
                <%= link_to(item.content, "/items/#{item.id}") %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
