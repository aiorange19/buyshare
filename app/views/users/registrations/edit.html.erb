<div class="main">
  <div class="container">
    <div><h2>登録内容変更</h2></div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <% if current_user.image.present? %>
        <img src=<%= current_user.image %> class = "icon_image">
      <% end %>

      <div class="field">
        <%= f.label :image %><br/>
        <%= f.file_field :image %>
      </div>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field">
        <%= f.label :password, '新しいパスワード' %> (パスワードが空の場合は変更されません。)<br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          ※<%= @minimum_password_length %>文字以上
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, '新しいパスワードの確認' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :current_password %>(変更内容を更新するためには現在のパスワードが必要です。)<br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "更新" %>
      </div>
    <% end %>

    <%= link_to "キャンセル ＞", :back %><br>
  </div>
</div>

